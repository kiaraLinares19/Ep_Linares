@model IEnumerable<Ep_Linares.Models.Curso>

<h2>Catálogo de Cursos</h2>

<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text" name="nombre" class="form-control" placeholder="Nombre del curso" value="@Context.Request.Query["nombre"]" />
        </div>

        <div class="col-md-2">
            <input type="number" name="creditosMin" class="form-control" placeholder="Créditos mín." value="@Context.Request.Query["creditosMin"]" />
        </div>
        <div class="col-md-2">
            <input type="number" name="creditosMax" class="form-control" placeholder="Créditos máx." value="@Context.Request.Query["creditosMax"]" />
        </div>

        <div class="col-md-2">
            <input type="time" name="horaInicio" class="form-control" value="@Context.Request.Query["horaInicio"]" />
        </div>
        <div class="col-md-2">
            <input type="time" name="horaFin" class="form-control" value="@Context.Request.Query["horaFin"]" />
        </div>

        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Código</th>
            <th>Créditos</th>
            <th>Horario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var curso in Model)
    {
        <tr>
            <td>@curso.Nombre</td>
            <td>@curso.Codigo</td>
            <td>@curso.Creditos</td>
            <td>@curso.HorarioInicio - @curso.HorarioFin</td>
            <td>
                <a href="@Url.Action("Detalle", "Cursos", new { id = curso.Id })" class="btn btn-outline-primary btn-sm">Ver</a>
            </td>
        </tr>
    }
    </tbody>
</table>
